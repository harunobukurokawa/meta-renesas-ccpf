From d746c29c0fbcc092305b876c208d2561f586bc68 Mon Sep 17 00:00:00 2001
From: Yuya Hamamachi <yuya.hamamachi.sx@renesas.com>
Date: Wed, 12 Jan 2022 15:02:44 +0900
Subject: [PATCH 3/3] starterkit: Change to use AArch64 flash-writer

Signed-off-by: Yuya Hamamachi <yuya.hamamachi.sx@renesas.com>
---
 starterkit/linux/script/rom_writer | 4 ++--
 starterkit/windows/rom_writer.lib  | 4 ++--
 2 files changed, 4 insertions(+), 4 deletions(-)

diff --git a/starterkit/linux/script/rom_writer b/starterkit/linux/script/rom_writer
index 471fe0f..00a368a 100755
--- a/starterkit/linux/script/rom_writer
+++ b/starterkit/linux/script/rom_writer
@@ -16,7 +16,7 @@ set tty  [lindex $argv 4]
 
 proc mot {} {
     global top
-    return $top/AArch32_Flash_writer_SCIF_DUMMY_CERT_E6300400_ULCB.mot
+    return $top/AArch64_Flash_writer_SCIF_DUMMY_CERT_E6300400_ULCB.mot
 }
 
 proc cpld_mode {} {
@@ -26,7 +26,7 @@ proc cpld_mode {} {
     ctrl_c "=>"
     send "\r"
     expect {
-	"=>" { send "cpld write 0x00 0x802181fe\r" }
+	"=>" { send "cpld write 0x00 0x8021813e\r" }
     }
     expect {
 	"=>" { send "cpld write 0x80 0x01\r" }
diff --git a/starterkit/windows/rom_writer.lib b/starterkit/windows/rom_writer.lib
index c7c4820..fcbbe0d 100644
--- a/starterkit/windows/rom_writer.lib
+++ b/starterkit/windows/rom_writer.lib
@@ -66,7 +66,7 @@ listbox "Auto Type Select" "Which Type ?" auto 1
 if result=0 return
 
 strcompare auto_mode "starterkit"
-if result=0 sprintf2 mot "%s\AArch32_Flash_writer_SCIF_DUMMY_CERT_E6300400_ULCB.mot" top
+if result=0 sprintf2 mot "%s\AArch64_Flash_writer_SCIF_DUMMY_CERT_E6300400_ULCB.mot" top
 
 strcompare auto_mode "salvator"
 if result=0 sprintf2 mot "%s\AArch64_Flash_writer_SCIF_DUMMY_CERT_E6300400_salvator-x.mot" top
@@ -227,7 +227,7 @@ strspecial msg
 yesnobox msg "Power Check"
 if result!=1 end
 
-sendln "cpld write 0x00 0x802181fe"
+sendln "cpld write 0x00 0x8021813e"
 
 wait "=>"
 
